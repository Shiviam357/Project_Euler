def largestPrimeFactor(number):
    maximus_prime,prime_factors,prime_numbers,factors,factors_count=0,[0],[2],[0],0

#loop to find all the prime_numbers upto the given number
    for i in range(3,number+3,2):
        for j in range(2,i+2,1):
            if (i%j==0): factors_count+=1 
        if factors_count==1:        prime_numbers.append(i)       #append i the prime_numbers list 
        factors_count=0             #reset the factors count

#loop to find all the factors of the given number
    for i in range(1,number+1):
         if number%i==0: factors.append(i) 

#loop to find all the prime_factors in the given list of factors by comparing it with prime_numbers list
    for f in factors:
        for p in prime_numbers:
            if f==p:                 prime_factors.append(f)       #append f the prime_numbers list

#return the maximum number in the prime_factors list
    return max(prime_factors)
