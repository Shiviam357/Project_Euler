def SpecialPythagoreanTriplet(number):
    for i in range (1,number+1):                       #:loop for first number
        for j in range (i,number+1):                   #:loop for second number
            for k in range(j,number+1):                #:loop for thrid number 
                if(i**2+j**2==k**2 and i+j+k==number): #:condition sum of numbers = given number and sum of sqaures of first two numbers= third numbers
                    product_numbers=i*j*k              #:append the product
                    return product_numbers             #:return product_numbers
